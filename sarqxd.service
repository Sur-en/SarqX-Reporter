[Unit]
Description = SarqX CLI daemon
After = network.target
Wants = network-online.target

[Service]
Type = simple
User = suro
EnvironmentFile=/etc/systemd/system/sarqx.env
ExecStart = $HOME/sarqx/config/sarqx.sh
Restart = on-abort
StartLimitInterval = 60
StartLimitBurst = 10

[Install]
WantedBy = multi-user.target
